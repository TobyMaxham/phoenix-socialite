{
    "name": "tobymaxham/phoenix-socialite",
    "description": "PhoenixII OAuth2 Provider for Laravel Socialite",
    "keywords": [
        "TobyMaxham",
        "phoenix-oauth",
        "phoenix-socialite",
        "laravel",
        "oauth",
        "provider",
        "socialite"
    ],
    "homepage": "https://github.com/tobymaxham/phoenix-socialite",
    "license": "MIT",
    "authors": [
        {
            "name": "TobyMaxham",
            "email": "git@maxham.de",
            "homepage": "https://maxham.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "illuminate/support": "^10.10",
        "laravel/socialite": "^5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "orchestra/testbench": "^8.24",
        "phpunit/phpunit": "^9.4",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "TobyMaxham\\PhoenixSocialite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TobyMaxham\\PhoenixSocialite\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "TobyMaxham\\PhoenixSocialite\\PhoenixOAuthServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
